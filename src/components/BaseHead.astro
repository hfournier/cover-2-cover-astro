---
type Props = {
  title: string
  description: string
  type?: string
}
const { title, description, type = "website" } = Astro.props
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
---

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="x-ua-compatible" content="ie=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta property="og:title" content={title} />
  <meta name="twitter:title" content={title} />
  <meta name="description" content={description} />
  <meta property="og:description" content={description} />
  <meta name="twitter:description" content={description} />
  <meta property="og:type" content={type} />
  <meta name="url" content={canonicalURL} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:image" content={`${Astro.site}/band.jpg}`} />
  <meta
    name="keywords"
    content="classic rock band, dance band, Kelowna, rock music, pop music, country music, parties, fundraisers, classic rock, corporate events, private events"
  />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <meta name="msapplication-TileColor" content="#da532c" />
  <meta name="theme-color" content="#ffffff" />
</head>
