---
import "../styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <BaseHead title={Astro.props.title} description={Astro.props.description} />
  <body
    class="lg:bg-[url(/images/album-covers.jpg)] h-screen bg-neutral-800 lg:bg-neutral-600 lg:bg-auto lg:bg-repeat lg:py-2 lg:bg-blend-multiply"
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>
